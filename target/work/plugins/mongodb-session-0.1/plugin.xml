<plugin name='mongodb-session' version='0.1' grailsVersion='1.3.3 &gt; *'>
  <author>Masatoshi Hayashi</author>
  <authorEmail>literalice@monochromeroad.com</authorEmail>
  <title>MongoDB Session Plugin</title>
  <description>Stores HTTP sessions in a MongoDB.</description>
  <documentation>http://grails.org/plugin/mongodb-session</documentation>
  <type>MongodbSessionGrailsPlugin</type>
  <resources>
    <resource>com.monochromeroad.grails.plugins.mongodbsession.MongoPersistentSession</resource>
    <resource>com.monochromeroad.grails.plugins.mongodbsession.MongoSessionCleanupService</resource>
    <resource>com.monochromeroad.grails.plugins.mongodbsession.MongoSessionPersisterService</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://m2repo.spockframework.org/snapshots' url='http://m2repo.spockframework.org/snapshots/' />
  </repositories>
  <dependencies />
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='database-session' version='1.1.2' />
      <plugin group='org.grails.plugins' name='webxml' version='1.4.1' />
      <plugin group='org.grails.plugins' name='mongodb' version='1.0.0.RC4' />
    </compile>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>